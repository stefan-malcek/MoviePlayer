<Window x:Class="MoviePlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoviePlayer"
        xmlns:helpers="clr-namespace:MoviePlayer.Helpers"
        xmlns:ui="clr-namespace:Emgu.CV.UI;assembly=Emgu.CV.UI"
        xmlns:controls="clr-namespace:MoviePlayer.Controls"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        mc:Ignorable="d" SizeChanged="MainWindow_OnSizeChanged"
        Title="MainWindow" WindowStartupLocation="CenterScreen"
        Loaded="MainWindow_OnLoaded" Closed="MainWindow_OnClosed"
        Height="600" Width="800" 
        MinHeight="600" MinWidth="800" 
        SizeToContent="WidthAndHeight"  DataContext="{Binding Main, Source={StaticResource Locator}}"
        x:Name="MainWindowElement">

    <Window.Resources>
        <helpers:ImageBoxSizeConverter x:Key="SizeConvertor"/>
        <helpers:BooleanToVisibilityConverter x:Key="VisibilityConverter"/>
        <helpers:BitmapToImageSourceConverter x:Key="ImageSourceConverter"/>
    </Window.Resources>

    <Window.CommandBindings>
        <!--<CommandBinding Command="ApplicationCommands.Open" CanExecute="Open_OnCanExecute" Executed="Open_OnExecuted"/>-->
        <!--<CommandBinding Command="MediaCommands.Play" CanExecute="Play_OnCanExecute" Executed="Play_OnExecuted"/>-->
        <CommandBinding Command="MediaCommands.Pause" CanExecute="Pause_OnCanExecute" Executed="Pause_OnExecuted"/>
        <CommandBinding Command="MediaCommands.Stop" CanExecute="Stop_OnCanExecute" Executed="Stop_OnExecuted"/>
    </Window.CommandBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Menu IsMainMenu="True" Grid.Row="0">
            <MenuItem Header="Menu">
                <MenuItem Header="Open File" InputGestureText="Ctrl+O" Command="{Binding BrowseFileCommand}"/>
                <MenuItem Header="Exit" InputGestureText="Ctrl+Q"/>
            </MenuItem>
        </Menu>
        <Grid x:Name="MediaGrid"  Grid.Row="1">
            <MediaElement Name="Player" Source="{Binding MovieUri}" Volume="{Binding Volume}" ScrubbingEnabled="True" 
                          LoadedBehavior="Manual" Stretch="Fill" MouseLeftButtonUp="MediaPlayer_MouseLeftButtonUp"/>
            <controls:ImageBoxControl x:Name="ImageBoxControl" Image="{Binding Image}" 
                                      VerticalAlignment="Bottom" HorizontalAlignment="Right" Milliseconds="{Binding Milliseconds}"
                                      Width="{Binding ElementName=MainWindowElement, Path=ActualWidth, Converter={StaticResource SizeConvertor}}"
                                      Height="{Binding ElementName=MainWindowElement, Path=ActualHeight, Converter={StaticResource SizeConvertor}}"
                                      Visibility="{Binding IsFeedbackActive, Converter={StaticResource VisibilityConverter}}"/>
            <TextBlock Text="{Binding Notification}" Foreground="Red" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>

        <StatusBar Grid.Row="2">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem Grid.Row="0" Grid.Column="0">
                <TextBlock Name="LabelProgressStatus">00:00:00</TextBlock>
            </StatusBarItem>
            <StatusBarItem Grid.Row="0" Grid.Column="1" HorizontalContentAlignment="Stretch">
                <Slider Name="SliderProgress" IsEnabled="{Binding IsPlaying}"
                        Thumb.DragStarted="sliderProgress_DragStarted" Thumb.DragCompleted="sliderProgress_DragCompleted" 
                        ValueChanged="sliderProgress_ValueChanged" IsMoveToPointEnabled="True"/>
            </StatusBarItem>
            <StatusBarItem Grid.Row="0" Grid.Column="2">
                <TextBlock Text="{Binding Milliseconds}" 
                           Visibility="{Binding IsFeedbackActive, Converter={StaticResource VisibilityConverter}}"/>
            </StatusBarItem>
            <StatusBarItem Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Play" Command="{Binding PlayCommand}"/>
                    <Button Content="Pause" Command="{Binding PauseCommand}"/>
                    <Button Content="Stop" Command="{Binding StopCommand}"/>
                
                        <CheckBox Content="Show feedback" IsChecked="{Binding IsFeedbackActive}"/>
                        <CheckBox Content="Allow auto resume" IsChecked="{Binding IsAutoPlayAllowed}"/>
                    <!--</StackPanel>-->
                </StackPanel>

            </StatusBarItem>
            <StatusBarItem Grid.Row="1" Grid.Column="1">
                <Label x:Name="Warning" Content="{Binding Notification}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Red"/>
            </StatusBarItem>
            <StatusBarItem Grid.Row="1" Grid.Column="2">
                <Slider Minimum="0" Maximum="1" Value="{Binding Volume, Mode=TwoWay}" VerticalAlignment="Center" Width="100" IsMoveToPointEnabled="True"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>

